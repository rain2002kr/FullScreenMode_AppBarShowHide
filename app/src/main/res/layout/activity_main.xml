<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/bt_FullScreenOn"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:text="전체화면"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.25"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.317" />

    <Button
        android:id="@+id/bt_FullScreenOff"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:text="전체화면해제"
        app:layout_constraintBottom_toBottomOf="@+id/bt_FullScreenOn"
        app:layout_constraintStart_toEndOf="@+id/bt_FullScreenOn"
        app:layout_constraintTop_toTopOf="@+id/bt_FullScreenOn" />

    <Button
        android:id="@+id/bt_ActionBarShow"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:text="앱바보여주기"
        app:layout_constraintBottom_toBottomOf="@+id/bt_ActionBarHide"
        app:layout_constraintEnd_toEndOf="@+id/bt_FullScreenOff"
        app:layout_constraintStart_toEndOf="@+id/bt_FullScreenOn"
        app:layout_constraintTop_toBottomOf="@+id/bt_FullScreenOn" />

    <Button
        android:id="@+id/bt_ActionBarHide"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:text="앱바숨기기"
        app:layout_constraintEnd_toEndOf="@+id/bt_FullScreenOn"
        app:layout_constraintStart_toStartOf="@+id/bt_FullScreenOn"
        app:layout_constraintTop_toBottomOf="@+id/bt_FullScreenOn" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="93dp"
        android:layout_marginBottom="203dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="입력테스트"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bt_FullScreenOff" />

    <Button
        android:id="@+id/bt_scr2_move"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2번째화면이동"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText" />
</androidx.constraintlayout.widget.ConstraintLayout>